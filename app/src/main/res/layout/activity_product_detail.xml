<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/beige"
    tools:context=".Activity.ProductDetail">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/background_toolbar"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_previousProductDetail"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@color/orange"
            android:shadowColor="#B58D49" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/PRODUCTDETAIL"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/orange"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="15dp">

            <ImageView
                android:id="@+id/ivIconCartProductDetail"
                android:layout_width="61dp"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_shopping_cart_24"
                app:tint="@color/orange" />

            <TextView
                android:id="@+id/tvNumberInCartProductDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:background="@drawable/cricle_bg"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="25sp" />

        </FrameLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivImageProductDetail"
                    android:layout_width="220dp"
                    android:layout_height="250dp"
                    android:layout_marginBottom="10sp"
                    android:gravity="center"
                    android:src="@drawable/img"/>
                <Button
                    android:id="@+id/btnImageProductDetail"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_marginTop="90dp"
                    android:background="@drawable/input_button"
                    android:backgroundTint="@color/white"
                    android:text=">"
                    android:textSize="28sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivImageDetail1ProductDetail"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:layout_marginTop="10sp"
                        android:padding="10dp"
                        android:src="@drawable/img" />

                    <ImageView
                        android:id="@+id/ivImageDetail2ProductDetail"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:gravity="center"
                        android:layout_marginTop="10sp"
                        android:padding="10dp"
                        android:src="@drawable/img" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tvProductNameProductDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Product Name"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tvPriceProductDetailEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="$699"
                android:textColor="@color/giatruoc"
                android:textStyle="bold"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/tvPriceProductDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="$699"
                android:textColor="@color/design_default_color_error"
                android:textStyle="bold"
                android:textSize="25dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="15sp">
                <Button
                    android:id="@+id/btnTinhNangProductDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_button"
                    android:padding="10sp"
                    android:layout_marginLeft="25sp"
                    android:text = "@string/Feature"
                    android:textColor="@color/orange"
                    android:textSize="18sp" />
                <Button
                    android:id="@+id/btnChiTietProductDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_button"
                    android:padding="10sp"
                    android:layout_marginStart="40sp"
                    android:text = "@string/Description"
                    android:textColor="@color/orange"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/llTinhNangProductDetail"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvBrandProductDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Brand"
                        android:textColor="#000"
                        android:textSize="25dp"/>
                    <TextView
                        android:id="@+id/tvCameraProductDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Camera"
                        android:textColor="#000"
                        android:textSize="25dp"/>
                    <TextView
                        android:id="@+id/tvRamProductDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ram"
                        android:textColor="#000"
                        android:textSize="25dp"/>

                    <TextView
                        android:id="@+id/tvRomProductDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rom"
                        android:textColor="#000"
                        android:textSize="25dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvChiTietProductDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#D3D3D3"
                    android:layout_marginLeft="20sp"
                    android:text = "Chi tiết"
                    android:textColor="#000"
                    android:visibility="gone"
                    android:textSize="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnTruAmountProductDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="-"
                    android:textSize="25sp"
                    android:background="@drawable/input_button"
                    android:layout_marginLeft="90sp" />
                <TextView
                    android:id="@+id/tvAmountProductDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginLeft="20sp"/>
                <Button
                    android:id="@+id/btnCongAmountProductDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:text="+"
                    android:textSize="25sp"
                    android:layout_marginLeft="20sp"
                    android:background="@drawable/input_button"/>
            </LinearLayout>
            <Button
                android:id="@+id/btnAddtoCartProductDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/input_button"
                android:layout_marginTop="10sp"
                android:text = "Add to cart"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Comment"
                    android:paddingLeft="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="28sp" />
                <Button
                    android:id="@+id/btnBinhLuanProductDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="150sp"
                    android:backgroundTint="@color/white"
                    android:drawableRight="@drawable/baseline_add_comment_24"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llBinhLuanProductDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/lvBinhLuanProductDetail"
                    android:layout_width="match_parent"

                    android:layout_height="150px" />

                <EditText
                    android:id="@+id/edtMyBinhLuanProductDetail"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:hint="Your comment" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/tvDanhGiaProductDetail"
                        android:paddingLeft="10sp"
                        android:text="Reviews"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    <Button
                        android:visibility="gone"
                        android:layout_width="36dp"
                        android:id="@+id/btnDanhGiaProductDetail"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:backgroundTint="#4D0C0C0B"
                        android:text="v"/>
                </LinearLayout>

                <ListView
                    android:id="@+id/lvMyBinhLuanProductDetail"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btnGuiBinhLuanProductDetail"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Gửi" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>